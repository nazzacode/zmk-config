#include <dt-bindings/zmk/matrix_transform.h>

// ? seen elsewhere ? 
// &embodi_layout {
//     transform = <&default_transform>;
// };

/ {
	chosen {
		// Links zmk,matrix-transform to default_transform, which defines how the physical matrix maps to logical key positions.
		zmk,matrix-transform = &default_transform;	
		// Links zmk,kscan to kscan0, so ZMK knows which keyboard scanner to use.
		zmk,kscan = &kscan0;
	};

	// Define matrix transformation
	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <16>;
		rows = <6>;
		// rhs needs to be offset to 
		map = <
			RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)   RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)   RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)   RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15)
							        RC(5,7) RC(3,5)   RC(3,8)  RC(5,10)
								    RC(4,6)                    RC(4,9)
		
		>;	
        // Old: RC(4,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8)
	};

	// Define keyboard scanning (kscan)
	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		// ? "col2row" means current flows from columns to rows
        diode-direction = "col2row";
		row-gpios 
		//  TODO: check col2row for thumb buttons?
			= <&gpio1 15 GPIO_ACTIVE_LOW>
			, <&gpio1 13 GPIO_ACTIVE_LOW>
			, <&gpio1 11 GPIO_ACTIVE_LOW>
			, <&gpio0 06 GPIO_ACTIVE_LOW>
			, <&gpio1 00 GPIO_ACTIVE_LOW>
			, <&gpio1 04 GPIO_ACTIVE_LOW>;
	};
};
